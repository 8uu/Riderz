<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driverTripForm">

    <TextView
        android:id="@+id/driverformtitle"
        android:layout_width="238dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:text="Driver Trip Form"
        android:textColor="@color/darkAccent"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/startlocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter start location here:"
        android:textColor="@color/darkAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/startlocation_form"
        app:layout_constraintStart_toStartOf="@+id/startlocation_form"
        app:layout_constraintTop_toBottomOf="@+id/driverformtitle" />

    <EditText
        android:id="@+id/startlocation_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:layout_marginTop="82dp"
        android:hint="@string/startlocation_hint"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter end location here:"
        android:textColor="@color/darkAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/endlocation_form"
        app:layout_constraintStart_toStartOf="@+id/endlocation_form"
        app:layout_constraintTop_toBottomOf="@+id/startlocation_form" />

    <EditText
        android:id="@+id/endlocation_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="346dp"
        android:hint="@string/endlocation_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endlocation" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginBottom="302dp"
        android:onClick="newTrip"
        android:text="@string/newtrip_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/endlocation_form"
        app:layout_constraintTop_toBottomOf="@+id/startlocation_form" />

</android.support.constraint.ConstraintLayout>